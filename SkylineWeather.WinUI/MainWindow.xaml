<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="SkylineWeather.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:charts="using:SkylineWeather.WinUI.Controls.Charts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SkylineWeather.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SkylineWeather.WinUI"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="MainGrid" RequestedTheme="Dark">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <charts:HistoricalWeatherGauge x:Name="HistoricalChart" Grid.Row="0" Grid.Column="1"/>
        <ScrollViewer
            Grid.Row="0" Grid.RowSpan="2"
            Grid.Column="0"
            HorizontalScrollBarVisibility="Visible"
            HorizontalScrollMode="Enabled"
            VerticalScrollMode="Disabled">
            <charts:HourlyChart
                x:Name="HourlyChart"
                Grid.Row="1"
                MinWidth="1000"
                Padding="0,12" />
        </ScrollViewer>
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            HorizontalScrollBarVisibility="Visible"
            HorizontalScrollMode="Enabled"
            VerticalScrollMode="Disabled">
            <charts:DailyChart 
                x:Name="DailyChart"
                Grid.Row="1"
                MinWidth="1000"
                Padding="48" />
        </ScrollViewer>
    </Grid>
</Window>
 