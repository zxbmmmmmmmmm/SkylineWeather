<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="SkylineWeather.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:charts="using:SkylineWeather.WinUI.Controls.Charts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SkylineWeather.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SkylineWeather.WinUI" 
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="MainGrid" RequestedTheme="Dark">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Get data" Loaded="Button_Loaded" Click="Button_Click"/>
        <ScrollViewer Grid.Column="0" VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Visible" HorizontalScrollMode="Enabled" Grid.Row="1">
            <charts:HourlyChart MinWidth="1000" Grid.Row="1" x:Name="HourlyChart" Padding="0,12" />
        </ScrollViewer>
        <ScrollViewer Grid.Column="1" VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Visible" HorizontalScrollMode="Enabled" Grid.Row="1">
            <charts:DailyChart MaxHeight="360" MinWidth="1000" Grid.Row="1" x:Name="DailyChart" Padding="48" />
        </ScrollViewer>
    </Grid>
</Window>
